{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "audiogram",
  "version": "0.1.0",
  "identifier": "com.eg.audiogram",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "audiogram",
        "decorations": false,
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["mp3"],
        "name": "MP3 Audio",
        "description": "MP3 Audio File - Audiogram",
        "mimeType": "audio/mpeg",
        "role": "Editor",
        "rank": "Default"
      },
      {
        "ext": ["wav"],
        "name": "WAV Audio",
        "description": "WAV Audio File - Audiogram",
        "mimeType": "audio/wav",
        "role": "Editor",
        "rank": "Default"
      },
      {
        "ext": ["flac"],
        "name": "FLAC Audio",
        "description": "FLAC Lossless Audio - Audiogram",
        "mimeType": "audio/flac",
        "role": "Editor",
        "rank": "Default"
      },
      {
        "ext": ["ogg"],
        "name": "OGG Audio",
        "description": "OGG Vorbis Audio - Audiogram",
        "mimeType": "audio/ogg",
        "role": "Editor",
        "rank": "Default"
      },
      {
        "ext": ["m4a", "aac"],
        "name": "AAC Audio",
        "description": "AAC Audio File - Audiogram",
        "mimeType": "audio/aac",
        "role": "Editor",
        "rank": "Default"
      },
      {
        "ext": ["wma"],
        "name": "WMA Audio",
        "description": "Windows Media Audio - Audiogram",
        "mimeType": "audio/x-ms-wma",
        "role": "Editor",
        "rank": "Default"
      }
    ]
  }
}
